{
    "name": "C",
    "image": "mcr.microsoft.com/devcontainers/cpp:1-ubuntu-20.04",
    "customizations": {
        "vscode": {
            "extensions": [
                "Gruntfuggly.todo-tree",
                "foxundermoon.shell-format",
                "LouisWT.regexp-preview",
                "chrmarti.regex",
                "Codium.codium",
                "christian-kohler.path-intellisense",
                "DavidAnson.vscode-markdownlint",
                "yzhang.markdown-all-in-one",
                "ms-vsliveshare.vsliveshare",
                "oderwat.indent-rainbow",
                "kisstkondoros.vscode-gutter-preview",
                "george-alisson.html-preview-vscode",
                "ms-vscode.hexeditor",
                "eamodio.gitlens",
                "codezombiech.gitignore",
                "github.vscode-github-actions",
                "donjayamanne.githistory",
                "mhutchie.git-graph",
                "SeyyedKhandon.firacode",
                "cschlosser.doxdocgen",
                "joshbolduc.commitlint",
                "naumovs.color-highlight",
                "formulahendry.code-runner",
                "ms-vscode.cpptools",
                "GitHub.copilot",
                "GitHub.copilot-chat",
                "GitHub.vscode-pull-request-github",
                "pnp.polacode"
            ]
        }
    },
    // Mount the monorepo folder into the container using WSL path
    "workspaceMount": "source=/mnt/d/projects,target=/workspace,type=bind",
    // Open only the submodule folder in the workspace
    "workspaceFolder": "/workspace/university/2nd_year/1st_sem/asa",
    // Add Install script
    "postCreateCommand": "sudo .devcontainer/install.sh"
}